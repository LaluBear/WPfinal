%p#notice= notice
= form_with(model: @code, url: "/redeem/code") do |form|
  - if @code.errors.any?
    #error_explanation
      %h2
        = pluralize(@code.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @code.errors.each do |error|
          %li= error.full_message
  .field
    = form.label :code
    = form.text_field :code
  .actions
    = form.submit "redeem"

%button  
  = link_to 'Create User', "/users/new"
